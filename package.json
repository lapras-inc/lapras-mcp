{
  "name": "@lapras-inc/lapras-mcp",
  "version": "0.0.4",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "lapras-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
