    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.14.0",
    "@vitest/ui": "^3.1.1",
    "esbuild": "^0.25.2",
    "lefthook": "^1.11.6",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  }
